<% layout("layouts/boilerplate") %>
<body>
  <div class="form-container">
    <h3>Edit Listing</h3>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
      <label for="title" class="form-label">Title:</label>
      <input
        type="text"
        class="form-control"
        id="title"
        name="listing[title]"
        value="<%= listing.title %>"
      /><br />

      <label for="description" class="form-label">Description:</label>
      <textarea
        id="description"
        class="form-control"
        name="listing[description]"
        required
      > <%= listing.description %></textarea
      ><br />

      <label for="price" class="form-label">Price:</label>
      <input
        type="number"
        class="form-control"
        id="price"
        name="listing[price]"
        value="<%= listing.price %>"
        required
      /><br />

      <label for="location" class="form-label">Location:</label>
      <input
        type="text"
        id="location"
        name="listing[location]"
        value="<%= listing.location %>"
        class="form-control"
        required
      /><br />

      <label for="country" class="form-label">Country:</label>
      <input
        type="text"
        id="country"
        name="listing[country]"
        value="<%= listing.country %>"
        class="form-control"
        required
      /><br />

      <label for="image" class="form-label">Image File Name:</label>
      <input
        type="text"
        id="fileName"
        class="form-control"
        name="listing[image][fileName]"
        value="<%= listing.image.fileName %>"
      /><br />
      <label for="image" class="form-label">Image URL:</label>
      <input
        type="text"
        id="image"
        class="form-control"
        name="listing[image][url]"
        value="<%= listing.image.url %>"
      /><br />

      <button type="submit" class="btn btn-primary">Create Listing</button>
    </form>
  </div>
</body>
